# ROR STAY - Environment Configuration
# Copy this file to .env and modify the values as needed

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
MONGO_URL=mongodb://mongodb:27017
DB_NAME=ror_stay

# ==============================================
# APPLICATION SETTINGS
# ==============================================
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=your-super-secret-key-change-this-in-production

# ==============================================
# SECURITY SETTINGS
# ==============================================
# JWT Token settings
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==============================================
# EMAIL CONFIGURATION (Optional)
# ==============================================
# SMTP settings for contact form notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@rorstay.com
SMTP_FROM_NAME=ROR STAY

# ==============================================
# FILE UPLOAD SETTINGS
# ==============================================
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp
UPLOAD_FOLDER=/app/uploads

# ==============================================
# API SETTINGS
# ==============================================
API_V1_STR=/api
CORS_ORIGINS=["http://localhost", "http://localhost:3000"]

# ==============================================
# CLOUD STORAGE (Optional)
# ==============================================
# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=ror-stay-images

# ==============================================
# MAPS INTEGRATION (Optional)
# ==============================================
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ==============================================
# MONITORING & LOGGING
# ==============================================
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# ==============================================
# PRODUCTION SETTINGS
# ==============================================
# Domain configuration for production
DOMAIN=yourdomain.com
HTTPS_REDIRECT=true

# SSL Certificate settings (for Let's Encrypt)
LETSENCRYPT_EMAIL=admin@yourdomain.com

# ==============================================
# BACKUP SETTINGS
# ==============================================
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
